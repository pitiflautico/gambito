    /**
     * Cargar canvas desde imagen base64
     */
    loadCanvasFromBase64(base64Image) {
        const img = new Image();
        img.onload = () => {
            // Limpiar canvas primero
            this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
            // Dibujar imagen
            this.ctx.drawImage(img, 0, 0);
            console.log('‚úÖ Canvas loaded from base64 successfully');
        };
        img.onerror = (error) => {
            console.error('‚ùå Error loading canvas image:', error);
        };
        img.src = base64Image;
    }

    /**
     * Guardar canvas a base64 (para demo mode)
     */
    saveCanvasToBase64() {
        try {
            const base64 = this.canvas.toDataURL('image/png');
            localStorage.setItem('pictionary_canvas_demo', base64);
            console.log('‚úÖ Canvas saved to localStorage:', base64.substring(0, 50) + '...');
        } catch (error) {
            console.error('‚ùå Error saving canvas:', error);
        }
    }

