{
  "name": "Mockup Game",
  "slug": "mockup",
  "version": "1.0.0",
  "description": "Juego mockup para testing y validación de BaseGameEngine",
  
  "timing": {
    "round_ended": {
      "type": "countdown",
      "seconds": 3
    }
  },
  
  "modules": {
    "scoring_system": {
      "enabled": true
    },
    "round_system": {
      "enabled": true
    },
    "turn_system": {
      "enabled": false
    },
    "player_state": {
      "enabled": true
    }
  },
  
  "turn_mode": "simultaneous",
  
  "customizableSettings": {
    "rounds": {
      "type": "number",
      "label": "Número de rondas",
      "default": 3,
      "min": 1,
      "max": 10
    }
  },
  
  "scoring": {
    "action_points": 10,
    "description": "10 puntos por participar en cada ronda"
  }
}
