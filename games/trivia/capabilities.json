{
  "slug": "trivia",
  "version": "1.0",
  "requires": {
    "modules": {
      "session_manager": "^1.0",
      "event_manager": "^1.0",
      "turn_system": "^1.0",
      "scoring_system": "^1.0",
      "timer_system": "^1.0",
      "round_system": "^1.0",
      "guest_system": "^1.0"
    }
  },
  "provides": {
    "events": [
      "GameFinishedEvent"
    ],
    "routes": [
      "/api/trivia/answer",
      "/api/trivia/countdown-ended"
    ],
    "views": [
      "games/trivia/game"
    ]
  },
  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "RoundStartedEvent": {
        "name": "game.round.started",
        "handler": "handleRoundStarted"
      },
      "RoundEndedEvent": {
        "name": "game.round.ended",
        "handler": "handleRoundEnded"
      },
      "PlayerActionEvent": {
        "name": "game.player.action",
        "handler": "handlePlayerAction"
      },
      "PhaseChangedEvent": {
        "name": "game.phase.changed",
        "handler": "handlePhaseChanged"
      },
      "TurnChangedEvent": {
        "name": "game.turn.changed",
        "handler": "handleTurnChanged"
      },
      "GameFinishedEvent": {
        "name": "trivia.game.finished",
        "handler": "handleGameFinished"
      }
    }
  }
}
