{
  "slug": "trivia",
  "version": "1.0",
  "requires": {
    "modules": {
      "event_manager": "^1.0",
      "turn_system": "^1.0",
      "scoring_system": "^1.0",
      "timer_system": "^1.0",
      "round_system": "^1.0",
      "guest_system": "^1.0"
    }
  },
  "provides": {
    "events": [
      "QuestionStartedEvent",
      "PlayerAnsweredEvent",
      "QuestionEndedEvent"
    ],
    "routes": [
      "/api/trivia/answer"
    ],
    "views": [
      "games/trivia/game"
    ]
  },
  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "QuestionStartedEvent": {
        "name": "trivia.question.started",
        "handler": "handleQuestionStarted"
      },
      "PlayerAnsweredEvent": {
        "name": "trivia.player.answered",
        "handler": "handlePlayerAnswered"
      },
      "QuestionEndedEvent": {
        "name": "trivia.question.ended",
        "handler": "handleQuestionEnded"
      }
    }
  }
}
