{
  "id": "pictionary",
  "name": "Pictionary",
  "slug": "pictionary",
  "description": "Juego clásico de dibujo y adivinanzas donde un jugador dibuja mientras los demás intentan adivinar",
  "version": "1.0.0",
  "minPlayers": 2,
  "maxPlayers": 10,
  "estimatedDuration": "15-20 minutos",
  "type": "drawing",
  "isPremium": false,
  "tags": ["drawing", "guessing", "creative", "social"],
  "supports_teams": true,

  "modules": {
    "game_core": {
      "enabled": true
    },
    "room_manager": {
      "enabled": true
    },
    "guest_system": {
      "enabled": true
    },
    "round_system": {
      "enabled": true,
      "total_rounds": 10,
      "inter_round_delay": 5
    },
    "phase_system": {
      "enabled": true,
      "phases": [
        {
          "name": "drawing",
          "duration": 20,
          "on_start": "App\\Events\\Pictionary\\DrawingStartedEvent",
          "on_end": "App\\Events\\Game\\PhaseEndedEvent",
          "on_end_callback": "handleDrawingEnded",
          "render_method": "renderDrawing"
        }
      ]
    },
    "timer_system": {
      "enabled": true
    },
    "scoring_system": {
      "enabled": true
    },
    "player_system": {
      "enabled": true
    },
    "roles_system": {
      "enabled": true,
      "roles": [
        {
          "name": "drawer",
          "count": 1,
          "description": "El jugador que dibuja",
          "rotate_on_round_start": true
        },
        {
          "name": "guesser",
          "count": -1,
          "description": "Los jugadores que adivinan",
          "rotate_on_round_start": false
        }
      ]
    },
    "teams_system": {
      "enabled": true,
      "min_teams": 2,
      "max_teams": 4,
      "allow_self_selection": true,
      "allow_toggle": true
    },
    "real_time_sync": {
      "enabled": true
    }
  },

  "timing": {
    "round_ended": {
      "type": "countdown",
      "message": "Siguiente ronda en",
      "delay": 5,
      "auto_next": true
    }
  },

  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "PhaseChangedEvent": {
        "name": ".game.phase.changed",
        "handler": "handlePhaseChanged"
      },
      "RoundEndedEvent": {
        "name": ".game.round.ended",
        "handler": "handleRoundEnded"
      },
      "DrawingStartedEvent": {
        "name": ".pictionary.drawing.started",
        "handler": "handleDrawingStarted"
      },
      "PhaseStartedEvent": {
        "name": ".game.phase.started",
        "handler": "handlePhaseStarted"
      },
      "PhaseEndedEvent": {
        "name": ".game.phase.ended",
        "handler": "handlePhaseEnded"
      },
      "PlayerLockedEvent": {
        "name": ".game.player.locked",
        "handler": "handlePlayerLocked"
      },
      "PlayersUnlockedEvent": {
        "name": ".players.unlocked",
        "handler": "handlePlayersUnlocked"
      }
    }
  },

  "customizableSettings": {
    "rounds": {
      "type": "number",
      "default": 10,
      "min": 3,
      "max": 30,
      "step": 1,
      "label": "Número de rondas",
      "description": "Cantidad de palabras que se dibujarán en total"
    },
    "round_duration": {
      "type": "number",
      "default": 30,
      "min": 15,
      "max": 120,
      "step": 5,
      "label": "Segundos por turno",
      "description": "Tiempo que tiene cada jugador para dibujar"
    },
    "difficulty": {
      "type": "radio",
      "default": "medium",
      "options": [
        {"value": "easy", "label": "Fácil", "description": "Palabras simples (casa, perro, sol)"},
        {"value": "medium", "label": "Medio", "description": "Palabras moderadas (elefante, guitarra)"},
        {"value": "hard", "label": "Difícil", "description": "Conceptos abstractos (nostalgia, democracia)"},
        {"value": "mixed", "label": "Mezclado", "description": "Combina todas las dificultades"}
      ],
      "label": "Dificultad de palabras"
    }
  },

  "scoring": {
    "correct_guess_base": 10,
    "drawer_success": 5,
    "speed_bonus_max": 5,
    "speed_thresholds": {
      "fast": 10,
      "medium": 20,
      "slow": 30
    }
  },

  "canvas": {
    "width": 800,
    "height": 600,
    "colors": ["#000000", "#FF0000", "#00FF00", "#0000FF", "#FFFF00", "#FF00FF", "#00FFFF", "#FFFFFF"],
    "brush_sizes": [2, 4, 8, 12],
    "tools": ["pencil", "eraser", "clear"]
  }
}
