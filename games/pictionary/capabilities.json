{
  "slug": "pictionary",
  "version": "1.2",
  "requires": {
    "modules": {
      "session_manager": "^1.0",
      "event_manager": "^1.0",
      "turn_system": "^1.0",
      "scoring_system": "^1.0",
      "timer_system": "^1.0",
      "round_system": "^1.0",
      "roles_system": "^1.0",
      "guest_system": "^1.0"
    }
  },
  "provides": {
    "events": [
      "PlayerAnsweredEvent",
      "PlayerEliminatedEvent",
      "RoundEndedEvent",
      "TurnChangedEvent",
      "GameFinishedEvent",
      "GameStateUpdatedEvent",
      "CanvasDrawEvent",
      "AnswerConfirmedEvent"
    ],
    "routes": [
      "/api/pictionary/player-answered",
      "/api/pictionary/confirm-answer",
      "/api/pictionary/advance-phase",
      "/api/pictionary/get-word",
      "/api/pictionary/draw",
      "/api/pictionary/clear"
    ],
    "views": [
      "games/pictionary/canvas"
    ]
  },
  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "PlayerAnsweredEvent": {
        "name": ".pictionary.player.answered",
        "handler": "handlePlayerAnswered"
      },
      "PlayerEliminatedEvent": {
        "name": ".pictionary.player.eliminated",
        "handler": "handlePlayerEliminated"
      },
      "RoundEndedEvent": {
        "name": ".pictionary.round.ended",
        "handler": "handleRoundEnded"
      },
      "TurnChangedEvent": {
        "name": ".pictionary.turn.changed",
        "handler": "handleTurnChanged"
      },
      "CanvasDrawEvent": {
        "name": ".pictionary.canvas.draw",
        "handler": "handleCanvasDraw"
      },
      "AnswerConfirmedEvent": {
        "name": ".pictionary.answer.confirmed",
        "handler": "handleAnswerConfirmed"
      },
      "GameStateUpdatedEvent": {
        "name": ".pictionary.game.state.updated",
        "handler": "handleGameStateUpdated"
      },
      "GameFinishedEvent": {
        "name": ".pictionary.game.finished",
        "handler": "handleGameFinished"
      }
    }
  }
}
