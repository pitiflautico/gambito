{
  "slug": "pictionary",
  "version": "1.0",
  "requires": {
    "websockets": true,
    "turns": true,
    "phases": true,
    "roles": true,
    "timers": true,
    "scoring": true
  },
  "provides": {
    "events": [
      "DrawStrokeEvent",
      "WordRevealedEvent",
      "CanvasClearedEvent",
      "AnswerClaimedEvent",
      "AnswerValidatedEvent"
    ],
    "routes": [],
    "views": [
      "games/pictionary/game"
    ]
  },
  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "RoundStartedEvent": {
        "name": "game.round.started",
        "description": "Sistema: Nueva ronda iniciada",
        "handler": "handleRoundStarted"
      },
      "RoundEndedEvent": {
        "name": "game.round.ended",
        "description": "Sistema: Ronda finalizada",
        "handler": "handleRoundEnded"
      },
      "PhaseChangedEvent": {
        "name": "game.phase.changed",
        "description": "Sistema: Cambio de fase con timing para timer",
        "handler": "handlePhaseChanged"
      },
      "DrawStrokeEvent": {
        "name": "pictionary.draw-stroke",
        "description": "Broadcast canvas stroke to all players",
        "handler": "handleDrawStroke"
      },
      "WordRevealedEvent": {
        "name": "pictionary.word-revealed",
        "description": "Reveal word to drawer only (private)",
        "handler": "handleWordRevealed"
      },
      "CorrectGuessEvent": {
        "name": "pictionary.correct-guess",
        "description": "Broadcast when player guesses correctly",
        "handler": "handleCorrectGuess"
      },
      "CanvasClearedEvent": {
        "name": "pictionary.canvas-cleared",
        "description": "Broadcast when drawer clears canvas",
        "handler": "handleCanvasCleared"
      },
      "AnswerClaimedEvent": {
        "name": "pictionary.answer-claimed",
        "description": "Broadcast when guesser claims they know the answer",
        "handler": "handleAnswerClaimed"
      },
      "AnswerValidatedEvent": {
        "name": "pictionary.answer-validated",
        "description": "Broadcast when drawer validates a claim",
        "handler": "handleAnswerValidated"
      },
      "PlayersUnlockedEvent": {
        "name": "game.players.unlocked",
        "description": "Broadcast when all players are unlocked (new round)",
        "handler": "handlePlayersUnlocked"
      },
      "PlayerScoreUpdatedEvent": {
        "name": "player.score.updated",
        "description": "Broadcast when a player's score changes",
        "handler": "handlePlayerScoreUpdated"
      }
    }
  }
}
