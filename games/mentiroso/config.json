{
  "id": "mentiroso",
  "name": "Mentiroso",
  "slug": "mentiroso",
  "version": "1.0.0",
  "description": "Juego social de engaño y persuasión donde un orador defiende una frase (verdadera o falsa) y los demás deben adivinar",
  "minPlayers": 3,
  "maxPlayers": 10,
  "estimatedDuration": 15,

  "timing": {
    "round_ended": {
      "type": "countdown",
      "message": "Siguiente ronda en",
      "delay": 10,
      "auto_next": true
    }
  },

  "event_config": {
    "channel": "room.{roomCode}",
    "events": {
      "GameStartedEvent": {
        "name": ".game.started",
        "handler": "handleGameStarted"
      },
      "RoundStartedEvent": {
        "name": ".game.round.started",
        "handler": "handleRoundStarted"
      },
      "RoundEndedEvent": {
        "name": ".game.round.ended",
        "handler": "handleRoundEnded"
      },
      "PhaseChangedEvent": {
        "name": ".game.phase.changed",
        "handler": "handlePhaseChanged"
      },
      "PhaseStartedEvent": {
        "name": ".game.phase.started",
        "handler": "handlePhaseStarted"
      },
      "PhaseEndedEvent": {
        "name": ".game.phase.ended",
        "handler": "handlePhaseEnded"
      },
      "PlayerLockedEvent": {
        "name": ".game.player.locked",
        "handler": "handlePlayerLocked"
      },
      "PlayersUnlockedEvent": {
        "name": ".players.unlocked",
        "handler": "handlePlayersUnlocked"
      },
      "StatementRevealedEvent": {
        "name": ".mentiroso.statement.revealed",
        "handler": "handleStatementRevealed"
      },
      "PlayerScoreUpdatedEvent": {
        "name": ".player.score.updated",
        "handler": "handlePlayerScoreUpdated"
      }
    }
  },

  "modules": {
    "game_core": { "enabled": true },
    "room_manager": { "enabled": true },
    "guest_system": { "enabled": true },
    "round_system": {
      "enabled": true,
      "total_rounds": 10,
      "inter_round_delay": 10
    },
    "turn_system": {
      "enabled": true,
      "mode": "sequential",
      "round_per_turn": true,
      "phases": [
        {
          "name": "preparation",
          "duration": 15,
          "on_start": null,
          "on_end": "onPreparationEnd"
        },
        {
          "name": "persuasion",
          "duration": 30,
          "on_start": null,
          "on_end": "onPersuasionEnd"
        },
        {
          "name": "voting",
          "duration": 15,
          "on_start": null,
          "on_end": "onVotingEnd"
        }
      ]
    },
    "scoring_system": { "enabled": true },
    "timer_system": { "enabled": true },
    "player_system": { "enabled": true },
    "roles_system": {
      "enabled": true,
      "roles": [
        {
          "name": "orador",
          "count": 1,
          "description": "El orador que defiende la frase",
          "rotate_on_round_start": true
        },
        {
          "name": "votante",
          "count": -1,
          "description": "Los votantes que deben adivinar",
          "rotate_on_round_start": false
        }
      ]
    },
    "real_time_sync": { "enabled": true }
  },
  "scoring": {
    "orador_deceives_majority": 10,
    "orador_deceives_all": 15,
    "voter_correct": 5,
    "voter_incorrect": 0
  },
  "customizableSettings": {
    "rounds": {
      "type": "number",
      "min": 5,
      "max": 15,
      "default": 10,
      "step": 5,
      "label": "Número de rondas"
    },
    "preparation_time": {
      "type": "number",
      "min": 10,
      "max": 30,
      "default": 15,
      "step": 5,
      "label": "Tiempo de preparación (segundos)"
    },
    "persuasion_time": {
      "type": "number",
      "min": 20,
      "max": 60,
      "default": 30,
      "step": 10,
      "label": "Tiempo de persuasión (segundos)"
    }
  },
  "canvas": {
    "enabled": false
  }
}
