  "customizableSettings": {
    "rounds": {
      "type": "number",
      "min": 5,
      "max": 15,
      "default": 10,
      "step": 5,
      "label": "Número de rondas"
    },
    "preparation_time": {
      "type": "number",
      "min": 10,
      "max": 30,
      "default": 15,
      "step": 5,
      "label": "Tiempo de preparación (segundos)"
