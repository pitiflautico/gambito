    "roles_system": {
      "enabled": true,
      "roles": ["orador", "votante"]
    },
    "real_time_sync": {
      "enabled": true
    }
  },
  "scoring": {
    "orador_deceives_majority": 10,
    "orador_deceives_all": 15,
    "voter_correct": 5,
    "voter_incorrect": 0
