  "timing": {
    "round_start": {
      "duration": 15,
      "countdown_visible": true,
      "message": "Preparando defensa..."
    },
    "preparation": {
      "duration": 2,
      "countdown_visible": true,
      "message": "Preparando defensa..."
    },
    "persuasion": {
      "duration": 5,
      "countdown_visible": true,
      "warning_threshold": 5,
      "auto_advance_on_expire": true,
      "message": "Tiempo de persuasión"
    },
    "voting": {
      "duration": 15,
      "countdown_visible": true,
      "auto_advance_on_expire": true,
      "message": "Vota: ¿Verdad o mentira?"
